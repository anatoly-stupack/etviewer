<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <Version Condition="$(Version) == '1.0.0.0'">1.2.2008.1000</Version>
    <BinPackageName>$(TargetName).zip</BinPackageName>
    <PdbPackageName>$(TargetName)-symbols.zip</PdbPackageName>
   </PropertyGroup>
  <ItemGroup>
    <PackageFiles Include="$(OutDir)$(TargetName).exe" />
    <SymbolFiles Include="$(OutDir)$(TargetName).pdb" />
  </ItemGroup>
  <Target Name="CreatePackage" AfterTargets="Build">
    <Message Text="Generating package file $(PackageName)" />
    <Copy
      SourceFiles="@(PackageFiles)"
      DestinationFolder="$(IntDir)package\bin"
    />
    <ZipDirectory
       SourceDirectory="$(IntDir)package\bin"
       DestinationFile="$(OutDir)$(BinPackageName)"
       Overwrite="true"
    />
    <Copy
      SourceFiles="@(SymbolFiles)"
      DestinationFolder="$(IntDir)package\pdb"
    />
    <ZipDirectory
       SourceDirectory="$(IntDir)package\pdb"
       DestinationFile="$(OutDir)$(PdbPackageName)"
       Overwrite="true"
    />
  </Target>
</Project>